<div class="container mt-4">

    <h3>Update Course</h3>
        <form class="mt-4" method="POST" action="/course/{{courses._id}}?_method=PUT">
            <div class="col-md-8">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input value="{{courses.name}}" type="text" class="form-control" id="Name" name="name">
                </div>
                <div class="form-group">
                    <label for="Decription">Decription</label>
                    <textarea type="text" class="form-control" id="Decription" name="decription">{{courses.decription}}</textarea>
                </div>
                <div class="form-group">
                    <label for="img">YoutubeID</label>
                    <input value="{{courses.youtubeID}}" type="text" class="form-control" id="img" name="youtubeID">
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a href="../../me/store/courses" class="btn btn-secondary">Cancer</a>
        </form>


</div>
</div>